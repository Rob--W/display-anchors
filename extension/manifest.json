{
    "name": "Display #Anchors",
    "description": "Displays anchors for all content in the current web page without breaking the layout.",
    "version": "1.4",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "scripts": ["storage-sync-polyfill.js", "background.js"]
    },
    "action": {
        "default_title": "Display #Anchors",
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        }
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "scripting",
        "storage",
        "notifications",
        "contextMenus",
        "activeTab"
    ],
    "optional_host_permissions": ["<all_urls>"],
    "optional_permissions": ["<all_urls>"],
    "options_ui": {
        "page": "options.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+A"
            }
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "display-anchors@robwu.nl",
            "strict_min_version": "121.0a1"
        },
        "gecko_android": {}
    },
    "minimum_chrome_version": "121"
}
